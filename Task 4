#include<iostream>
using namespace std;
int main()
{
    int week;
    int days=1;
    cout<<"Enter the number of weeks (3 max): ";
    cin>>weeks;
    if(weeks > 3)
        {
            cout<<"Invalid number";
        }
    else
    {
      for(int i=1; i<=weeks; i++){
         cout<<"Week: "<<i<<endl<<"\t";
         for(int j=1; j<=7; j++){
             cout<<"Day: "<<days<<"  ";
             days=days+1;
         }
         cout<<endl;
       }
    }
    cout<<"\nGoodbye!";
    return 0;
}
